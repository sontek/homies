require File.join(File.dirname(__FILE__), 'setup.rb')
require 'aws/client/commandline'

AWS::Client::CommandLine.new do |client|
  client.service_call   = lambda { |params| @elasticbeanstalk.describe_applications(params) }
  client.result_key     = 'Applications'
  client.empty_response = 'No applications found.'
  
  client.option('-a', '--application-names NAMES', 'List of application names') do |names| 
    client.service_param('ApplicationNames', names.split(','))
  end
  
  client.filter 'ConfigurationTemplates' do |val| val.join(', ') end
  client.filter 'DateCreated'    do |val| Time.at(val)   end
  client.filter 'DateUpdated'    do |val| Time.at(val)   end
  client.filter 'Versions'       do |val| val.join(', ') end
end.run(ARGV)
